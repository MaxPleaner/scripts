<p id="notice"><%= notice %></p>

<div class="row-fluid">
<div class="span4">
	<section id="noteBox">
		<h4><%= @note.title %></h4>

		<p><%= @note.description %></p>

		<p>Priority: <%= @note.priority %></p>


		<p>Shared with <%= @note.users.map(&:username).join(",") %></p>


		<div style="float:left;">
			<%= button_to('Edit', edit_note_path(@note), :class => 'btn btn-med btn-primary', :method => :get) %></div>

			<% if @note.user_id == @current_user.id %>
			<div style="float:left;">
				<%= button_to( 'Delete', @note, method: :delete, :class => 'btn btn-med btn-primary', data: { confirm: 'Are you sure?' } )%>
			</div>
			<% end %>
		</div>
	</section>
</div><!--/span-->

<%= link_to 'Back', notes_path %>





