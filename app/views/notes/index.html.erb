<h2>Notepad</h2>

<br>
<%= button_to('Create new note', new_note_path, :class => 'btn btn-large btn-primary', :method => :get) %>

<% @notes.each do |note| %>
<div class="row-fluid">
  <div class="span4">
    <section id="noteBox">
      <h4> <%= note.title %></h4>

      <p><%= note.description %></p>

      <p>Priority: <%= note.priority %></p>
      <div style="float:left;">
        <%= button_to('Edit', edit_note_path(note), :class => 'btn btn-med btn-primary', :method => :get) %>
      </div>

      <div style="float:left;">
        <%= button_to( 'Delete', note, method: :delete, :class => 'btn btn-med btn-primary', data: { confirm: 'Are you sure?' } )%>
      </div>
    </section>
  </div><!--/span-->
</div>

<% end %>









